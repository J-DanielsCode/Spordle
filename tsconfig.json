{  
  "include": [
    "./*.ts",
    "./*.tsx",
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "/**/*.ts",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "**/*.d.ts"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client", "jest"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}

